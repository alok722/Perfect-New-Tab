{
    "manifest_version": 3,
    "name": "Perfect Tab",
    "description": "This extension replaces the new tab page with a more feature-rich and lightweight page.",
  "homepage_url": "https://ankitgaurav.github.io/perfect-tab",
    "version": "3.0",
    "chrome_url_overrides": {
        "newtab": "perfect-tab.html"
    },
    "browser_action": {

    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "icons": { "48": "icon.png" },
    "permissions": [
        "contextMenus",
        "tabs",
        "bookmarks",
        "storage",
        "downloads",
        "history",
        "sessions",
        "topSites",
        "chrome://favicon/"
    ]
}
